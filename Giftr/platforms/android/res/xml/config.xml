<?xml version='1.0' encoding='utf-8'?>
<widget id="ca.edumedia.wagn0070.giftr" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="Device">
        <param name="android-package" value="org.apache.cordova.device.Device" />
    </feature>
    <feature name="LocalNotification">
        <param name="android-package" value="de.appplant.cordova.plugin.localnotification.LocalNotification" />
    </feature>
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <name>Jake's Giftr</name>
    <description> A sample Apache Cordova application that responds to the deviceready event. </description>
    <author email="wagn0070@algonquinlive.com" href="edumedia.ca"> Jacob Wagner</author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />
    <splash density="land-hdpi" src="res/screen/splash-land-hdpi.png" />
    <splash density="land-mdpi" src="res/screen/splash-land-mdpi.png" />
    <splash density="land-xxhdpi" src="res/screen/splash-land-xxhdpi.png" />
    <splash density="land-xhdpi" src="res/screen/splash-land-xhdpi.png" />
    <splash density="port-hdpi" src="res/screen/splash-port-hdpi.png" />
    <splash density="port-mdpi" src="res/screen/splash-port-mdpi.png" />
    <splash density="port-xxhdpi" src="res/screen/splash-port-xxhdpi.png" />
    <splash density="port-xhdpi" src="res/screen/splash-port-xhdpi.png" />
    <icon density="mdpi" src="res/icons/icon-48-mdpi.png" />
    <icon density="hdpi" src="res/icons/icon-72-hdpi.png" />
    <icon density="xhdpi" src="res/icons/icon-96-xhdpi.png" />
    <icon density="xxhdpi" src="res/icons/icon-144-xxhdpi.png" />
    <icon density="xxxhdpi" src="res/icons/icon-192-xxxhdpi.png" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="SplashScreen" value="screen" />
    <preference name="splashScreenDelay" value="5000" />
</widget>
